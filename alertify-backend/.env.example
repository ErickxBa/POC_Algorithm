NODE_ENV=development
PORT=3000

# Base de Datos Embebida
# PERSIST_DATA: true = guardar en archivo JSON, false = usar solo memoria
PERSIST_DATA=true

# Ubicación del archivo de datos (relativo a la carpeta raíz del proyecto)
DATA_FILE_PATH=./data/graph-data.json

# Configuración JWT
JWT_SECRET=alertify-super-secret-key-change-in-production
JWT_EXPIRATION=24h

# Configuración WebSocket
WS_PORT=3001
WS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# API de Mapas
MAPS_API_KEY=your-google-maps-api-key

# Parámetros del Algoritmo LPA*
# α: peso de distancia (0-1)
# β: peso de riesgo (0-1)
LPA_ALPHA=0.5
LPA_BETA=0.5
